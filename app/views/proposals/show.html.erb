<div class="proposal" %>
  <% if @proposal.url.present? %>
    <h2><%= link_to @proposal.title, @proposal.url, :rel => 'nofollow'%></h2>
  <% else %>
    <h2><%= @proposal.title %></h2>
  <% end %>

  <%- # render :partial => 'shared/byline', :locals => {:comment_or_proposal => @proposal, :voting => true, :show_tags => true} %>
  <%= @proposal.html.html_safe if @proposal.html.present? %>
  <p>
    <% if can? :edit, @proposal %>
      <%= link_to 'edit', edit_proposal_path(@proposal) %>
    <% end %>
    <% if can? :destroy, @proposal %>
      <%= link_to 'delete', proposal_path(@proposal), :method => :delete, :confirm => "Are you really sure you want to delete this proposal?  This will delete any comments as well." %>
    <% end %>
  </p>
</div>

<hr/>

<div class="row">

  
  <div class="span6"> 
    <h2>Pros</h2> 
    <a href="#" style="font-size:3em;" id="addpro-trigger">+</a>
    <%= render :partial => 'procons/form_pro' %>  
    <section id="pros">
      <%= render @pros %>
    </section>
  </div>
  
  <div class="span6">
    <h2>Cons</h2>
    <a href="#" style="font-size:3em;" id="addcon-trigger">-</a>
    <%= render :partial => 'procons/form_con' %>   
    <section id="cons">
      <%= render @cons %>
    </section>
  </div>
  
    <div id="reply_comment" style="display: none;">
      <%- # render :partial => "procons/form", :locals => {:reply_comment => true} %>
    </div>

  </div>
  <div class="span6">
  </div>
</div>
