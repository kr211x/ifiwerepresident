<div class="hero-unit home">
  <div class="row">
    <div class="span7">
      <h1>Create policies to change the world</h1>
    </div>

    <div class="span3">
      <%= form_for @user, :url => create_with_issue_users_path, :html => {:class => "form-stacked"} do |f| %>
        <% if @user.errors.any? or @issue.errors.any? %>
          <div class="error_messages">
            <ul>
              <% for message in @user.errors.full_messages.reject{|msg| msg =~ /digest/} %>
                <li><%= message %></li>
              <% end %>
              <% for message in @issue.errors.full_messages %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
